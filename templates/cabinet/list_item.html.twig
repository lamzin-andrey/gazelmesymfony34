<li>
	<img src="{{item.image}}" class="ii" title="{{item.addtext}}" />
	<div class="shortitemtext left">
		<header><a href='#' title="{{item.addtext}}">{{item.title}}</a></header>
		<div class="text">
			<div class="vprice b"><span class="name">Цена:</span> {{ item.price|rouble }}</div>
			<div class="name">{{ item.regionName|location_name(item.city, item.cityName) }}</div>
			<div class="name">
			{% if (app.user) %}
				{{ app.user.displayName }}
			{% endif %}
			</div>
			<div class="name">{{ item.box|type_transfer(item.term, item.people) }}</div>
			<div class="phone">
				Телефон: <a href="/phones/{{ item.id }}" target="_blank" class="dashed gn" @click="onClickGetPhone($event, '{{ item.id }}')">Показать</a>
			</div>
		</div>
	</div>
	<div class="cabcontrols">
		<a href="/cabinet/edit/{{item.id}}">Редактировать</a>
		<a href="/cabinet/up/{{item.id}}/">Поднять</a>

		{% if (item.isHide) %}
			<a href="/cabinet/show/{{item.id}}" class="hideshow">{{ 'Показать'|trans }}</a>
		{% else %}
			<a href="/cabinet/hide/{{item.id}}" class="hideshow">{{ 'Скрыть'|trans }}</a>
		{% endif %}

		<a href="/cabinet/delete/{{item.id}}" class="delitem">{{ 'Удалить'|trans }}</a>

		{% if (item.isModerate == 0) %}
			<span class="cabitem darkred pt10">{{ 'Не проверено модератором'|trans }}</span>
		{% endif%}
	</div>
	<div class="both"></div>
	<phoneview id="{{ item.id }}" ref="pv{{ item.id }}"></phoneview>
</li>