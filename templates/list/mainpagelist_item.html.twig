<li>
	<img src="{{ item.image }}" class="ii" title="{{ item.addtext }}" />
	<div class="shortitemtext left">
		<header><a href='{{ item.id|advlink(item.ccodename, item.rcodename, item.codename, item.city) }}' title="{{ item.addtext }}"> {{ item.title }}</a></header>
		<div class="text">
			
			<div class="vprice b"><span class="name">Цена:</span> {{ item.price|rouble }}</div>
			
			<div class="name">{{ item.regionName|location_name(item.city, item.cityName) }}</div>
			<div class="name">
					{{ item.displayName }}
			</div>
			<div class="name">{{ item.box|type_transfer(item.term, item.people) }}</div>
			<div class="phone">
				Телефон: <a href="/phones/{{ item.id }}" target="_blank" class="dashed gn" @click="onClickGetPhone($event, '{{ item.id }}')">Показать</a>
			</div>
		</div>
	</div>
	<div class="both"></div>
	<phoneview id="{{ item.id }}" ref="pv{{ item.id }}"></phoneview>
</li>